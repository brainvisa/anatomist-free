class VtkComponent( SystemComponent ):
  _name = 'vtk'
  _includeFile = 'vtkWidgetsInstantiator.h'
  _libFile = 'libvtkCommon'

  def findInclude( self ):
    search = []
    for x in self.searchPath():
      g = glob.glob( os.path.join( x, 'include', 'vtk-*' ) )
      if g:
        search += g
    inc = findInPath( None, self._includeFile, None, search )
    if not inc:
      search = []
      for x in self.searchPath():
        g = glob.glob( os.path.join( x, 'include', 'vtk' ) )
        if g:
          search += g
      inc = findInPath( None, self._includeFile, None, search )
    if inc:
      self._data[ 'include' ] = inc
      self._found = 1
    else:
      SystemComponent.findInclude( self )

  def _libraries( self ):
    return [ 'vtkWidgets', 'vtkRendering', 'vtkGraphics',
      'vtkIO', 'vtkCommon', 'vtkFiltering', 'vtkHybrid' ]

  def dependencies( self ):
    if systemname == 'darwin':
      return [ 'qt', 'opengl' ]
    else:
      return [ 'qt', 'opengl',
        'png', 'tiff', 'freetype' ]

