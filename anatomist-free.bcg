class VtkInria3DComponent( SystemComponent ):
  _name = 'vtkinria3d'
  _includeFile = 'vtkINRIA3DConfigure.h'
  _libFile = 'libvtkDataManagement'

  def postInit( self ):
    if not self._initialized:
      SystemComponent.postInit( self )
      defines = self.get( 'defines' )
      if not defines:
        defines = []
      defines.append( 'vtkINRIA3D_USE_ITK' )
      defines.append( 'vtkINRIA3D_USE_HWSHADING' )
      self._data[ 'defines' ] = defines

  def dependencies( self ):
    return [ VtkComponent ]

  def _libraries( self ):
    return [ 'vtkVisuManagement', 'vtkDataManagement',
      'vtkHWShading', 'vtkRenderingAddOn' ]

